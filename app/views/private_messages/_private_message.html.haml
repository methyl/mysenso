%tr{:class => ["row",("unread" if private_message.unread?)]}
  %td
    = (check_box_tag 'private_message_ids[]', private_message.id) if private_message.receiver == current_user
  %td
    = image_tag private_message.sender.avatar_url, :alt => "Avatar", :class => :avatar
  %td
    = link_to private_message.sender.full_name, user_path(private_message.sender)
    %br/
    %span
      = private_message.created_at.strftime("%d.%m.%Y %H:%M")
  %td
    = link_to(private_message.title, private_message_path(private_message))
    %br/
    %span
      = truncate(private_message.content, :length => 50)
  %td
    = link_to(image_tag("layout/pm-remove.png"), private_message_path(private_message), :confirm => "JesteÅ› pewny?", :method => :delete)
    
  
  

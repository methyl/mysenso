- if user_signed_in? 
  = current_user.email
  = link_to('Wyloguj się', destroy_user_session_path, :method => :delete)

- if not user_signed_in?
  
  #login_box
    = semantic_form_for :user, :url => user_session_path do |f|
      = f.inputs do
        = f.input :email
        = f.input :password
        = f.input :remember_me, :as => :boolean
      = f.buttons do
        = f.commit_button 'Zaloguj się'

  #registration_box
    = render :partial => 'users/registration_form'

!!!
%html
  %head
    %title Mysenso
    /= stylesheet_link_tag 'formtastic', 'my_formtastic_changes'
    /= stylesheet_link_tag 'jquery.Jcrop'
    /= stylesheet_link_tag 'smoothness/jquery-ui-1.8.14.custom'
    /= stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    /= stylesheet_link_tag 'print.css', :media => 'print'
    /= stylesheet_link_tag 'layout'
    = include_stylesheets :libs, :media => :all
    = include_stylesheets :screen, :media => [:screen, :projection]
    = include_stylesheets :print, :media => :print
    = include_javascripts :workspace
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    /[if IE 6]
      = stylesheet_link_tag 'formtastic_ie6'
    /[if IE 7]
      = stylesheet_link_tag 'formtastic_ie7'
    /= javascript_include_tag :defaults
    /= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"
    /= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"
    /= javascript_include_tag "jquery_ujs", 'jquery.Jcrop.min', 'autocomplete-rails.js', :cache => true
    = csrf_meta_tag
  %body.mysenso.bp
    #container
      #header
        = render :partial => 'layouts/top_navigation'
        = render :partial => 'layouts/main_navigation'
      #content
        .padding
          - if notice
            %p.notice
              = notice
          - if alert
            %p.alert
              = alert
          = yield
      #footer
        Copyright Lucjan Suski

